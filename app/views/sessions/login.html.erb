<div class="authen text-center">
  <h1>Log in</h1>
  <%= form_tag(:action => 'login_attempt', :html => {:class => "form-horizontal center"}) do %>
    <div class="form-group">
      <%= text_field_tag :email, params[:email], placeholder: 'email', class: "form-control" %>
    </div>
    <div class="form-group">
      <%= password_field_tag :password, nil, placeholder: 'password', class: 'form-control' %>
    </div>
    <%= submit_tag("Log In", class: "btn btn-default btn-primary") %>
  <% end %>
</div>
